#! A range-seperated gradient for SO2 to test disk algorithms by explicitly setting low memory 

core.set_memory_bytes(int(2.e6))


molecule SO2 {
S
O 1 1.4
O 1 1.4 2 119
symmetry c1
}

set {
    basis cc-pVDZ
    points 5
}

func = {
    "name": "random",
    "x_hf": {
        "alpha": 0.6,
        "beta": 1.0,
        "omega": 0.2
    },
    "c_functionals": {}
}


anl_grad = gradient('scf', dft_functional=func, dertype=1)

